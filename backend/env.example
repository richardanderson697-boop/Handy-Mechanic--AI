# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/handy-mechanic
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/handy-mechanic?retryWrites=true&w=majority

# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_change_this_to_something_very_secure

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# YouTube Data API (optional - for video recommendations)
YOUTUBE_API_KEY=your_youtube_api_key_here

# File Upload
MAX_FILE_SIZE=10485760
# 10MB in bytes

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
